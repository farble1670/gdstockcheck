<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_marginTop="@dimen/item_vertical_margin"
      android:layout_marginBottom="@dimen/item_vertical_margin"
      android:layout_marginLeft="@dimen/item_horizontal_margin"
      android:layout_marginRight="@dimen/item_horizontal_margin"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        tools:src="@drawable/nexus_6"
        android:layout_width="128dp"
        android:layout_height="128dp"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/item_horizontal_margin"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <TextView
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:id="@+id/name"
          tools:text="Nexus 6, Blue, 64GB"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <TextView
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:layout_gravity="center_vertical"
          android:id="@+id/status"
          android:textAllCaps="true"
          tools:text="IN STOCK"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <TextView
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:layout_gravity="center_vertical"
          android:id="@+id/time"
          tools:text="12:34:43pm"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

    </LinearLayout>

  </LinearLayout>

  <FrameLayout
      android:id="@+id/progress"
      android:visibility="gone"
      tools:visibility="visible"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#aa000000"
      android:layout_gravity="center">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
  </FrameLayout>
</FrameLayout>
